<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_poll"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="co.jlabs.famb.NewPoll">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="@color/colorPrimaryDark"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="5dp"

            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arrow"
            android:rotation="180"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Task"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/n_poll"
            android:layout_toRightOf="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create"
            android:textColor="#fff"
            android:layout_below="@+id/n_poll"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/light_start_gradient">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Your task here"
                    android:background="#00000000"
                    android:textColor="#ACB0B2"
                    android:inputType="textNoSuggestions"
                    android:id="@+id/task_name"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColorHint="#ACB0B2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/draw"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:background="@drawable/light_start_gradient">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Assign to someone"
                    android:background="#00000000"
                    android:textColor="#ACB0B2"
                    android:inputType="textNoSuggestions"
                    android:id="@+id/assign"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColorHint="#ACB0B2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/draw"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"

                android:layout_marginRight="25sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/light_start_gradient">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Add note"
                    android:id="@+id/add_note"
                    android:paddingTop="10dp"
                    android:inputType="textNoSuggestions"
                    android:background="#00000000"
                    android:textColor="#ACB0B2"
                    android:paddingLeft="20dp"
                    android:gravity="top"
                    android:textSize="15sp"
                    android:textColorHint="#ACB0B2"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/draw"
                    android:padding="12dp"
                    android:layout_marginRight="2dp"
                    android:gravity="top"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginRight="25sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/light_up_gradient">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECT PRIORITY"
                    android:id="@+id/enter"
                    android:paddingLeft="20dp"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:textSize="10sp"
                    android:textColor="#ACB0B2"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/rdgrp"
                    android:layout_below="@+id/enter"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="Normal"
                        android:layout_width="match_parent"
                        android:textColor="#ACB0B2"
                        android:layout_margin="5dp"
                        android:background="@drawable/light_start_gradient"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:textColor="#ACB0B2"
                        android:background="@drawable/light_start_gradient"
                        android:text="Important"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:textColor="#ACB0B2"
                        android:layout_margin="5dp"
                        android:background="@drawable/light_start_gradient"
                        android:text="Critical"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/bar"
                    android:layout_marginTop="15dp"
                    android:background="#0D394B"
                    android:layout_below="@id/rdgrp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE AND TIME"
                    android:id="@+id/dt"
                    android:layout_below="@+id/bar"
                    android:paddingLeft="20dp"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:textSize="10sp"
                    android:textColor="#ACB0B2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:id="@+id/date"
                    android:layout_below="@+id/dt"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/light_start_gradient">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="DATE: 25/08/16"
                        android:background="#00000000"
                        android:id="@+id/date_enter"
                        android:inputType="textNoSuggestions"
                        android:textColor="#ACB0B2"
                        android:paddingLeft="20dp"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:textColorHint="#ACB0B2"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/draw"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/date"
                    android:layout_height="36dp"
                    android:id="@+id/time"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/light_start_gradient">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="TIME: 8 PM"
                        android:id="@+id/time_edit"
                        android:inputType="textNoSuggestions"
                        android:textColor="#ACB0B2"
                        android:paddingLeft="20dp"
                        android:background="#00000000"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:textColorHint="#ACB0B2"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/draw"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:src="@drawable/right_arrow"
        android:id="@+id/fab_add"
        android:padding="5dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
